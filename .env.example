# Application
NODE_ENV=development
PORT=3000

# Database
MONGO_URI=mongodb://localhost:27017/admin-panel-dashboard

# JWT Configuration
# Generate secure secrets: openssl rand -base64 64
JWT_ACCESS_SECRET=your-access-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_ACCESS_EXPIRES=15m      # access token validity
JWT_REFRESH_EXPIRES=7d      # refresh token validity

# Seed Super Admin
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=ChangeMe123!

# Two-Factor Authentication
TFA_ENABLED=false
TFA_CODE_TTL_SECONDS=300      # TFA code validity (seconds)
TFA_MAX_ATTEMPTS=5            # Max wrong attempts before invalidation
GMAIL_USER=your-gmail-address@gmail.com
GMAIL_PASS=your-gmail-app-password

# CORS
CORS_ORIGIN=http://localhost:4200

WEBHOOK_URL=your-webhook-url-here